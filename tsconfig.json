{
  "compilerOptions": {
    "pretty": true,
    "noEmitOnError": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
